{
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php@0.6.0"
        },
        {
            "src": "style.css",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*\\.php)$",
            "dest": "/$1"
        },
        {
            "src": "/(.*\\.css)$",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ]
}